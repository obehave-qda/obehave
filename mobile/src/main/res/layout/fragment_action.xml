<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/root_frame">
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_height="wrap_content" android:text="@string/label_sort"/>
        <Spinner android:layout_width="match_parent" android:layout_marginLeft="10dp" android:layout_marginBottom="15dp" android:layout_marginRight="10dp" android:layout_height="wrap_content" android:id="@+id/spSort" android:entries="@array/sort_entries" android:prompt="@string/sort_prompt">
        </Spinner>
        <ListView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@id/android:list">

        </ListView>
    </LinearLayout>
</FrameLayout>