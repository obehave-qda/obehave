<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10"
                AnchorPane.bottomAnchor="10">
        <top>
            <VBox>
                <ImageView id="logoImage" preserveRatio="true" fitWidth="500">
                    <image>
                        <Image url="/org/obehave/view/pictures/obehave.png"/>
                    </image>
                </ImageView>
                <Label fx:id="versionLabel"/>
            </VBox>
        </top>
        <bottom>
            <BorderPane>
                <left>
                    <Hyperlink text="http://www.obehave.org" onAction="#showWebsite"/>
                </left>
                <right>
                    <Button text="Close" onAction="#handleClose"/>
                </right>
            </BorderPane>
        </bottom>
    </BorderPane>
    <stylesheets>
        <URL value="@/org/obehave/view/components/obehave.css"/>
    </stylesheets>
</AnchorPane>