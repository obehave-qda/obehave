<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import org.obehave.view.controller.components.ObservationController?>
<?import org.obehave.view.controller.components.tree.ProjectTreeComponent?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.obehave.view.controller.MainController" fx:id="vbox">
    <MenuBar fx:id="menubar">
        <Menu text="File">
            <MenuItem onAction="#loadVideo" text="Load Video"/>
            <MenuItem onAction="#close" text="Close"/>
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.25" fx:id="splitpane">
        <ProjectTreeComponent fx:id="tree" SplitPane.resizableWithParent="false"/>
        <ObservationController fx:id="observationController" />
    </SplitPane>
    <stylesheets>
        <URL value="@obehave.css"/>
    </stylesheets>
</VBox>
