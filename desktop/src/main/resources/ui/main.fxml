<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import org.obehave.view.controller.components.VideoComponent?>
<VBox prefHeight="768" prefWidth="1024" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.obehave.view.controller.MainController">
    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#loadVideo" text="Load Video"/>
            <MenuItem onAction="#close" text="Close"/>
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.25">
        <TreeView fx:id="tree" SplitPane.resizableWithParent="false"/>
        <BorderPane>
            <center>
                <AnchorPane>
                    <VideoComponent fx:id="videoComponent"/>
                </AnchorPane>
            </center>
            <bottom>
                <AnchorPane>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="200.0" stroke="BLACK"
                               strokeType="INSIDE" width="200.0" AnchorPane.bottomAnchor="20.0"
                               AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0"/>

                </AnchorPane>
            </bottom>
        </BorderPane>
    </SplitPane>
</VBox>
